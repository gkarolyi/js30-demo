%li.col-span-1.flex.flex-col.text-center.bg-white.rounded-lg.shadow.divide-y.divide-gray-200
    .flex-1.flex.flex-col
        - begin
            = image_tag "#{id}_thumb.jpg", class: "h-40 flex-shrink-0"
        - rescue
            = image_tag "notfound_thumb.jpg", class: "h-40 flex-shrink-0"
        %h3.my-4.text-gray-900.text-sm.font-medium= "Challenge ##{id}"
    .-mt-px.flex.divide-x.divide-gray-200
        .w-0.flex-1.flex
            = link_to "Code", "https://github.com/gkarolyi", class: "-mr-px w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-700 font-medium-border border border-transparent rounded-bl-lg hover:text-gray-500"
            = link_to "Demo", challenge_path(id), class: "-mr-px w-0 flex-1 inline-flex items-center justify-center py-4 text-sm text-gray-700 font-medium-border border border-transparent rounded-bl-lg hover:text-gray-500"