.challenge-body
    %h2 
        Update CSS variables with 
        %span.hl JS
    
    .controls
        %label{ for: 'spacing' } Spacing:
        %input{ id: 'spacing',
                type: 'range',
                name: 'spacing',
                min: '0',
                max: '200',
                value: '0',
                data: { sizing: 'px' }
        }

        %label{ for: 'blur' } Blur:
        %input{ id: 'blur',
                type: 'range',
                name: 'blur',
                min: '0',
                max: '25',
                value: '0',
                data: { sizing: 'px' }
        }

        %label{ for: 'base' } Base colour:
        %input{ id: 'base',
                type: 'color',
                name: 'base',
                value: "#ffc600"
        }

    %img{ src: "https://source.unsplash.com/7bwQXzbF6KE/800x500" }