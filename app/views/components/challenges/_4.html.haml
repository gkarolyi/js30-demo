.challenge-body
    #inventors-table
        .flex.justify-between
            %h3.text-m.text-gray-darkest.p-6 Table of inventors
            .flex.justify-between
                - ['reset', 'born in the 1500s', 'full names', 'birthdates', 'total years', 'ages'].each do |label|
                    %button{ type: "button", class: "inline-flex items-center px-2.5 py-1.5 my-3 mx-1 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none", id: "btn-inventors-#{label.split.first}" }= label
        .flex.flex-col
            .-my-2.overflow-x-auto.sm:-mx-6.lg:-mx-8 
                .py-2.align-middle.inline-bloc.min-w-full.sm:px-6.lg:px-8
                    .shadow.overflow-hidden.border-b.border-gray-200.sm:rounded-lg
                        %table.min-w-full.divide-y.divide-gray-200
                            %thead.bg-gray-50
                                %tr
                                    - ['#', 'First name', 'Last name', 'Born', 'Died'].each do |col_title|
                                        %th{ class: "px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider", scope: 'col' }= col_title
                                - inventors.each_with_index do |inventor, i|
                                    %tr{ class: i.even? ? "bg-white" : "bg-gray-50" }
                                        - row_options = { class: "px-6 py-4 whitespace-nowrap font-medium text-xs text-left text-gray-700" }
                                        %th{ row_options }= i + 1
                                        - [:first, :last, :year, :passed].each do |key|
                                            %th{ row_options }= inventor[key]

    #people-list
        .flex.justify-between
            %h3.text-m.text-gray-darkest.p-6 List of people
            .flex.justify-between
                - ['reset', 'alphabetical'].each do |label|
                    %button{ type: "button", class: "inline-flex items-center px-2.5 py-1.5 my-3 mx-1 border border-gray-300 shadow-sm text-xs font-medium rounded text-gray-700 bg-white hover:bg-gray-50 focus:outline-none", id: "btn-people-#{label.split.first}" }= label
        .grid.grid-flow-col.grid-rows-12.gap-2.px-2
            - people.each do |person|
                .text-sm.text-gray-500= person